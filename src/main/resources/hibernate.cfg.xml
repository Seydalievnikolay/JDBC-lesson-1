<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>


        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/skypro</property>
        <property name="hibernate.connection.user">postgres</property>
        <property name="hibernate.connection.password">nimbus2001</property>
        <property name="hibernate.connection.driver">org.postgresql.Driver</property>

        <property name="hibernate.enable_lazy_load_no_trans">true</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>


        <!-- List of XML mapping files -->
        <mapping class= "pojo.Employee"/>

    </session-factory>
</hibernate-configuration>